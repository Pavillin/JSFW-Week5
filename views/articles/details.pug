extends ../layout

block content  
    div(style="display: flex; justify-content: space-between;")
        a(href=`/articles/${article._id}/delete`) Delete
        a(href='/articles') Go back
        a(href=`/articles/${article._id}/update`) Update Article
    img(src=article.hero style =`width: 100%; max-height: 400px; object-fit: cover;`)
    h1= article.title
    h6= article.date
    h6 #{article.authors.join(', ')}

    p= article.content