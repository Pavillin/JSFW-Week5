extends ../layout

block content
    h1 Update an Article

    form(method="POST")
        input(name="title" value=article.title placeholder="Title of Article")
        input(name="hero" value=article.hero placeholder="Hero image URL")
        input(name="date" value=article.date type="date")
        input(name="authors" value=article.authors placeholder="Authors")
        textarea(name="content" placeholder="Content of Article")=article.content

        button(type="submit") Create Article